#!/bin/sh

# Lint only staged markdown files before commit
STAGED_MD_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.md$')
if [ -n "$STAGED_MD_FILES" ]; then
	echo "$STAGED_MD_FILES" | xargs npx markdownlint-cli
	if [ $? -ne 0 ]; then
		echo "\nMarkdownlint failed on staged files. Please fix lint errors before committing."
		exit 1
	fi
else
	echo "No staged markdown files to lint."
fi
