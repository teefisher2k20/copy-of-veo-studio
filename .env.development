# Local Development Environment
# Copy this to .env.local and fill in your values

# Google AI API Key (required for video generation)
VITE_API_KEY=YOUR_GOOGLE_AI_API_KEY

# Local storage path for generated videos
VITE_LOCAL_STORAGE_PATH=./local-storage/videos

# Enable offline mode (uses cached models when possible)
VITE_OFFLINE_MODE=false

# Local database (optional - for storing generation history)
VITE_USE_LOCAL_DB=true
VITE_DB_PATH=./local-storage/app.db

# Performance settings
VITE_MAX_CONCURRENT_GENERATIONS=2
VITE_ENABLE_GPU_ACCELERATION=true

# Development server
VITE_DEV_PORT=3000
